<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="../../../stylesheets/page.xsl"?>
<element extends="markup:xul:XULElement" name="caption">
	<abstract>
		<locale>
			A header for a <link type="element" href="reference://markup/xul/groupbox">groupbox</link>.
		</locale>
		<locale xml:lang="ru">
			Заголовок для элемента <link type="element" href="reference://markup/xul/groupbox">groupbox</link>.
			Может содержать только текст, задаваемую атрибутом <link type="attribute" href="reference://markup/xul/caption">label</link>
		</locale>
	</abstract>
	<remarks>
		<!--remark>
			<locale xml:lang="ru">
				Реализация элемента <link type="element" href="reference://markup/xul/caption">caption</link> в <b>Ample SDK</b> не позволяет
				задавать для него дочерние элементы.
			</locale>
		</remark-->
	</remarks>
	<examples />
	<members>
		<attributes>
			<attribute name="label" default="" readonly="false">
				<description>
					<locale>
						The label that will appear on the element.
						If this is left out, no text appears.
					</locale>
					<locale xml:lang="ru">
						Текст заголовка. Если не указан, заголовок будет пустой.
					</locale>
				</description>
			</attribute>
			<attribute name="image" default="" readonly="false">
				<description>
					<locale>
						The URL of the image to appear on the element. If this attribute is empty or left out, no image appears.
					</locale>
					<locale xml:lang="ru">
						URL пиктограммы для заголовка. Если не указан, пиктограмма будет отсутствовать.
					</locale>
				</description>
			</attribute>
		</attributes>
		<methods />
		<properties />
		<events />
	</members>
</element>